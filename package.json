{
  "name": "@playkit-js/playkit-js-ui",
  "version": "0.77.10",
  "description": "",
  "keywords": [
    "kaltura",
    "player",
    "playkit-js",
    "playkit-js-ui",
    "html5 player"
  ],
  "homepage": "https://github.com/kaltura/playkit-js-ui#readme",
  "bugs": {
    "url": "https://github.com/kaltura/playkit-js-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaltura/playkit-js-ui.git"
  },
  "license": "AGPL-3.0",
  "main": "dist/playkit-ui.js",
  "sass": "src/styles/exported.scss",
  "files": [
    "dist/**/*",
    "src/**/*",
    "translations/**/*",
    "flow-typed/**/*"
  ],
  "scripts": {
    "serve": "yarn run build:dev && webpack serve --open --mode development",
    "watch": "webpack --watch --mode development",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build": "yarn run build:prod && yarn run build:types",
    "build:types": "tsc --build tsconfig-lib.json && mkdir -p lib && api-extractor run --local --diagnostics",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn run type-check -- --watch",
    "prebuild": "npm run clean",
    "clean": "rimraf ./dist",
    "precommit": "lint-staged",
    "prettier:fix": "prettier --write .",
    "pushTaggedRelease": "git push --follow-tags --no-verify origin master",
    "release": "standard-version",
    "test": "karma start karma.conf.js",
    "test:debug": "DEBUG_UNIT_TESTS=1 karma start karma.conf.js --auto-watch --no-single-run --browsers Chrome",
    "test:watch": "karma start karma.conf.js --auto-watch --no-single-run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "preact": "^10.19.2",
    "preact-i18n": "^2.0.0-preactx.2",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/plugin-proposal-decorators": "^7.23.3",
    "@babel/plugin-transform-react-jsx": "^7.23.4",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.22.15",
    "@microsoft/api-extractor": "^7.38.0",
    "@playkit-js/kaltura-player-js": "canary",
    "@playkit-js/playkit-js": "canary",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.12",
    "babel-loader": "^9.1.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chalk": "4.1.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "8.22.0",
    "eslint-plugin-mocha": "^10.2.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "lint-staged": "^10.2.11",
    "mocha": "^10.0.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "sinon": "^14.0.0",
    "sinon-chai": "latest",
    "standard-version": "^6.0.1",
    "style-loader": "^1.2.1",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "publishConfig": {
    "cache": "~/.npm",
    "access": "public"
  },
  "kcc": {
    "name": "playkit-ui"
  }
}
