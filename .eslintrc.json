{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "plugins": [
    "import",
    "flowtype",
    "mocha-no-only",
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "amd": true,
    "commonjs": true
  },
  "globals": {
    "should": true,
    "sinon": true
  },
  "rules": {
    "mocha-no-only/mocha-no-only": [
      "error"
    ],
    "require-jsdoc": [
      "error"
    ],
    "valid-jsdoc": [
      "error"
    ],
    "flowtype/define-flow-type": 2
  }
}
